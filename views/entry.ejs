<body class="individual single">
<%- partial('header') %>
<div id="content">
<div id="main">
	<p class="topicPath"><a href="/">Home</a> &gt; <a href="/category/<%= entry.category %>/"><%= categories[entry.category].name %></a> &gt; <span class="current"><%= pageTitle %></span></p>
	<ul class="flip" id="flip1">
		<% if (prev != null) { %>
		<li class="newer"><a href="/entry/<%= prev.id %>/" title="<%= prev.title %>" rel="nofollow">Newer</a></li>
		<% } %>
		<% if (next != null) { %>
		<li class="older"><a href="/entry/<%= next.id %>/" title="<%= next.title %>" rel="nofollow">Older</a></li>
		<% } %>
	</ul>
	<h1><%= pageTitle %></h1>
	<div class="section entry">
		<ul class="info">
			<li class="date"><%= entry.date %></li>
			<li class="category"><a href="/category/<%= entry.category %>/" title="<%= categories[entry.category].name %> Index"><%= categories[entry.category].name %></a></li>
			<li class="tag">
			<% for (var i = 0; i < entry.tags.length; i++) { %>
				<a href="./" rel="nofollow"><%= tags[entry.tags[i]].name %></a><% if (entry.tags[i + 1] != undefined) { %>, <% } %>
			<% } %>
			</li>
		</ul>
		<div class="textBody">
			<p><%- entry.body %></p>
		</div>
		<% if (next != null || prev != null) { %>
		<ul class="flip" id="flip2">
			<% if (prev != null) { %>
			<li class="newer">Newer: <a href="/entry/<%= prev.id %>/" title="1つ新しい記事"><%= prev.title %></a></li>
			<% } %>
			<% if (next != null) { %>
			<li class="older">Older: <a href="/entry/<%= next.id %>/" title="1つ古い記事"><%= next.title %></a></li>
			<% } %>
		</ul>
		<% } %>
		<div class="section" id="comments">
			<h2>Comment:<span class="count"><%= entry.comments.length %></span></h2>
			<dl class="log">
				<% for (var i = 0; i < entry.comments.length; i++) { %>
				<dt id="comment001"><span class="name"><%= entry.comments[i].author %></span><span class="date"><%= entry.comments[i].date %></span></dt>
				<dd>
					<p><%= entry.comments[i].body %></p>
				</dd>
				<% } %>
			</dl>
			<form class="post" method="post" action="comment/" id="commentsForm">
				<fieldset>
					<legend>Comment Form</legend>
					<div>
						<p class="commentModerated"><% msg %></p>
					</div>
					<dl id="name-email">
						<dt>
							<label for="comment-author">Name</label>
						</dt>
						<dd>
							<input type="text" class="inputField" id="comment-author" name="author" />
						</dd>
						<dt>
							<label for="comment-email">Mail address</label>
						</dt>
						<dd>
							<input type="text" class="inputField" id="comment-email" name="email" />
						</dd>
						<dt>
							<label for="comment-uri"><abbr title="Uniform Resource Identifer">URI</abbr></label>
						</dt>
						<dd>
							<input type="text" class="inputField" id="comment-uri" name="uri" value="http://" />
						</dd>
					</dl>
					<p></p>
					<dl>
						<dt>
							<label for="comment-body">Comment</label>
						</dt>
						<dd>
							<textarea id="comment-body" name="body" rows="5" cols="50"></textarea>
						</dd>
					</dl>
					<div class="action">
						<input type="submit" class="submit post" value="Post" />
					</div>
				</fieldset>
			</form>
		</div>
		<!-- end div#comment -->
