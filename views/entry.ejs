		<!-- end div#trackback -->
	</div>
	<!-- end div.entry -->
	<p class="topicPath" id="path2"><a href="/">Home</a> &gt; <a href="/category/<%= entry.category %>/"><%= categories[entry.category].name %></a> &gt; <span class="current"><%= pageTitle %></span></p>
</div>
